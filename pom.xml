									/> <copy file="${project.build.outputDirectory}/Dockerfile" toFile="${project.build.directory}/Dockerfile" 
									overwrite="true" /> -->

								<copy file="fox.properties-dist"
									tofile="${project.build.directory}/fox.properties-dist" />
								<chmod dir="${project.build.directory}" perm="700"
									includes="**/*.sh" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
